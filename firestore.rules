service cloud.firestore {
  match /databases/{database}/documents {
    function signedIn() {
      return request.auth.uid != null;
    }

    match /users/{uid} {
      allow read, create: if true;
      allow update, delete: if signedIn();
    }
     match /userShortInfo/{uid} {
      allow read: if true;
      allow write: if signedIn();
    }
    match /products/{uid} {
      allow read: if true;
      allow write: if signedIn();
    }
    match /productsDetail/{uid} {
      allow read: if true;
      allow write: if signedIn();
    }
    match /favoriteProducts/{uid} {
      allow read: if true;
      allow write: if signedIn();
    }
    
    match /channels/{uid} {
      allow read: if true;
      allow write: if signedIn();
      match /messages/{uid} {
        allow read: if true;
        allow write: if signedIn();
      }
    }
  }
}
service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
